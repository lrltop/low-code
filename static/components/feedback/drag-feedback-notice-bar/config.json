{
	"componentName": "drag-feedback-notice-bar",
	"name": "滚动通知",
	"description": "",
    "customHandleStyle":true,
	"props": [
		{
			"label": "提示文字",
			"description": "单层数组格式，横向滚动时只支持滚动一条数据（横向滚动多条通知则需要开启step属性）",
			"key": "texts",
			"type": "Array",
			"default": ["滚动通知"],
            "inputType": "array",
            "inputProps": {
                "itemInputType": "text",
                "itemInputProps": {},
                "itemDefault": "通知信息"
            }
		},
        {
        	"label": "滚动模式",
        	"description": "",
        	"key": "direction",
        	"type": "String",
        	"default": "row",
            "inputType": "select",
            "inputProps": {
                "options": [
                    { "label": "横向滚动", "value": "row"},
                    { "label": "竖向滚动", "value": "column"}
                ]
            }
        },
		{
			"label": "左侧图标",
			"description": "",
			"key": "icon",
			"type": "String",
			"default": "volume",
            "inputType": "uviewIcon"
		},
		{
			"label": "通告模式",
			"description": "",
			"key": "mode",
			"type": "String",
			"default": "",
            "inputType": "select",
            "inputProps": {
                "options": [
                    { "label": "不显示", "value": ""},
                    { "label": "显示右箭头", "value": "link"},
                    { "label": "显示右侧关闭图标", "value": "closable"}
                ]
            }
		},
		{
			"label": "字体大小",
			"description": "",
            "classify": "样式",
			"key": "fontSize",
			"type": "String",
			"default": "14px",
			"inputType": "size",
            "sectionMode": "fontSize"
		},
		
		{
			"label": "文字颜色",
			"description": "",
            "classify": "样式",
			"key": "color",
			"type": "String",
			"default": "#f9ae3d",
			"inputType": "color"
		},
		{
			"label": "背景颜色",
			"description": "",
            "classify": "样式",
			"key": "bgColor",
			"type": "String",
			"default": "#fdf6ec",
			"inputType": "color"
		},
		{
			"label": "水平滚动速度",
			"description": "即每秒滚动多少px(rpx)，这有利于控制文字无论多少时，都能有一个恒定的速度",
			"key": "speed",
			"type": "String",
			"default": "80px",
            "inputType": "size"
		},
		{
			"label": "滚动周期时长",
			"description": "滚动一个周期的时间长",
			"key": "duration",
			"type": "Number",
			"default": 2000,
            "inputProps": {
                "suffixText": "ms"
            }
		},
		{
			"label": "步进形式滚动",
			"description": "开启会强制修改滚动模式为横向",
			"key": "step",
			"type": "Boolean",
			"default": false
		},
		{
			"label": "禁止用手滑动切换",
			"description": "目前HX2.6.11，只支持App 2.5.5+、H5 2.5.5+、支付宝小程序、字节跳动小程序",
			"key": "disableTouch",
			"type": "Boolean",
			"default": true
		}
	],
	"events": [
		{
			"label": "点击通告文字触发",
			"key": "click",
			"description": "$event为{index: 点击的text的索引, text: 点击的内容}",
			"params": []
		},
        {
        	"label": "点击右侧关闭图标触发",
        	"key": "close",
        	"description": "",
        	"params": []
        }
	]
}