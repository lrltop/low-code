{
    "componentName": "scroll-view",
    "name": "可滚动视图",
    "description": "可滚动视图区域。用于区域滚动",
    "order": 1,
    "props": [{
        "label": "允许横向滚动",
        "description": "",
        "key": "scrollX",
        "type": "Boolean",
        "default": false
    }, {
        "label": "允许纵向滚动",
        "description": "",
        "key": "scrollY",
        "type": "Boolean",
        "default": false
    }, {
        "label": "设置竖向滚动条位置",
        "description": "",
        "key": "scrollTop",
        "type": "Number",
        "default": 0,
        "must": {
            // 依赖属性 例如 position
            "key": "scrollY",
            // 依赖值，支持数组多个值，例如："value": ["absolute"，"fixed"]
            "value": [true]
        }
    }, {
        "label": "容器高度",
        "description": "",
        "key": "viewHeight",
        "type": "Number",
        "default": 300,
        "must": {
            // 依赖属性 例如 position
            "key": "scrollY",
            // 依赖值，支持数组多个值，例如："value": ["absolute"，"fixed"]
            "value": [true]
        }
    }, {
        "label": "设置横向滚动条位置",
        "description": "",
        "key": "scrollLeft",
        "type": "Number",
        "default": 0,
        "must": {
            // 依赖属性 例如 position
            "key": "scrollX",
            // 依赖值，支持数组多个值，例如："value": ["absolute"，"fixed"]
            "value": [true]
        }
    }, {
        "label": "滚动到的元素",
        "description": "值应为某子元素id（id不能以数字开头）。设置哪个方向可滚动，则在哪个方向滚动到该元素",
        "key": "scrollIntoView",
        "type": "String",
        "default": ""
    }, {
        "label": "动画过渡",
        "description": "在设置滚动条位置时使用动画过渡",
        "key": "scrollWithAnimation",
        "type": "Boolean",
        "default": false
    }, {
        "label": "返回顶部",
        "description": "iOS点击顶部状态栏、安卓双击标题栏时，滚动条返回顶部，只支持竖向",
        "key": "enableBackToTop",
        "type": "Boolean",
        "default": false
    }],
    "events": [{
        "label": "加载数据",
        "key": "upCallback",
        "description": "将返回{mescroll，page}两个对象",
        "params": [{
            "mescroll": "上下拉刷新实例，可以结束上拉监听事件mescroll.endSuccess(list.length)，加载失败提示this.mescroll.endErr()等",
            "page": "page.num:当前页 从1开始, page.size:每页数据条数,默认10"
        }]
    }],
    "slot": {
        "default": "默认内容"
    }
}
